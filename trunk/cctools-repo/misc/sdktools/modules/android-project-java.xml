<cctools-module title="Android Java project" id="aproject">
    <new title="New Android Application">
	<view type="dirpath" title="Project directory" hint="Select directory for new project" name="path" />
	<view type="edit" title="Application name" hint="My Android App" name="appname" />
	<view type="edit" title="Project name" hint="MyAndroidApp" name="name" />
	<view type="edit" title="Activity name" hint="MyAndroidAppActivity" name="activity" />
	<view type="edit" title="Package" hint="com.example.myandroid"  name="package" />
	<command title="Create" exec="aproject create project --gui --path @path@ --package @package@ --name @name@ --appname @appname@ --activity @activity@" />
    </new>
    <compile title="Compile">
	<command title="Compile" exec="aproject build release" />
    </compile>
    <compile title="Compile debug">
	<command title="Compile" exec="aproject build debug" />
    </compile>
    <build title="Build">
	<command title="Build" exec="aproject build release" />
    </build>
    <build title="Build debug">
	<command title="Build" exec="aproject build debug" />
    </build>
    <run title="Run">
	<command title="Run" exec="aproject build release --install" />
    </run>
    <run title="Run debug">
	<command title="Run" exec="aproject build --install" />
    </run>
    <clean title="Clean">
	<command title="Clean" exec="aproject clean" />
    </clean>
</cctools-module>
