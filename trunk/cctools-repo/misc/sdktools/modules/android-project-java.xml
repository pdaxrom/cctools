<cctools-module
    title="Android Java project"
    title-ru="Android Java проект"
    id="aproject">
    <new
	title="New Android Java application"
	title-ru="Новое Android Java приложение">
	<view type="dirpath"
	    title="Project directory"
	    title-ru="Директория"
	    hint="Select directory for new project"
	    hint-ru="для нового проекта"
	    name="path" />
	<view type="edit"
	    title="Application name"
	    title-ru="Название приложения"
	    hint="My Android App"
	    name="appname" />
	<view type="edit"
	    title="Project name"
	    title-ru="Название проекта"
	    hint="HelloWorld"
	    name="name" />
	<view type="edit"
	    title="Activity name"
	    title-ru="Название Activity"
	    hint="MyAndroidAppActivity"
	    name="activity" />
	<view type="edit"
	    title="Package"
	    title-ru="Пакет"
	    hint="com.example.HelloWorld"
	    name="package" />
	<command
	    title="Create"
	    title-ru="Создать"
	    exec="aproject create project --gui --path @path@ --package @package@ --name @name@ --appname @appname@ --activity @activity@" />
    </new>
    <compile
	title="Compile"
	title-ru="Скомпилировать">
	<command
	    title="Compile"
	    title-ru="Скомпилировать"
	    exec="aproject build release" />
    </compile>
    <compile
	title="Compile debug"
	title-ru="Скомпилировать (отладка)">
	<command
	    title="Compile"
	    title-ru="Скомпилировать (отладка)"
	    exec="aproject build debug" />
    </compile>
    <build
	title="Build"
	title-ru="Собрать">
	<command
	    title="Build"
	    title-ru="Собрать"
	    exec="aproject build release" />
    </build>
    <build
	title="Build debug"
	title-ru="Собрать (отладка)">
	<command
	    title="Build debug"
	    title-ru="Собрать (отладка)"
	    exec="aproject build debug" />
    </build>
    <run
	title="Run"
	title-ru="Запустить">
	<command
	    title="Run"
	    title-ru="Запустить"
	    exec="aproject build release --install" />
    </run>
    <run
	title="Run"
	title-ru="Запустить (отладка)">
	<command
	    title="Run"
	    title-ru="Запустить (отладка)"
	    exec="aproject build debug --install" />
    </run>
    <clean
	title="Clean"
	title="Очистить">
	<command
	    title="Clean"
	    title-ru="Очистить"
	    exec="aproject clean" />
    </clean>
</cctools-module>
