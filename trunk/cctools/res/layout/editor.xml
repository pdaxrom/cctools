<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/white"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <com.pdaxrom.editor.CodeEditor
        xmlns:app="http://schemas.android.com/apk/res/com.pdaxrom.cctools"

	    android:id="@+id/codeEditor"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:gravity="top"
	    android:inputType="textMultiLine|textNoSuggestions"
	    android:typeface="monospace"
	    android:textSize="12sp"
	    android:text=""

        android:background="@android:color/black"
        android:textColor="@android:color/white"

        app:gutterTextColor="@color/grey"
        app:gutterLineColor="@color/grey"
        app:drawLineNumbers="true"
        app:drawGutterLine="true"
        app:gutterSize="@dimen/gutter_size"
        app:gutterPadding="@dimen/gutter_padding"
        app:highlightText="true"/>
    
</RelativeLayout>
